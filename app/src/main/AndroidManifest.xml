<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.javiernunez.puppies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconpuppies"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Favoritas"
            android:parentActivityName=".MainActivity">
            <!-- Soporte para versiones anteriores a 4.0: -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".menu_opciones.acercade"
            android:parentActivityName=".MainActivity">
            <!-- Soporte para versiones anteriores a 4.0: -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".menu_opciones.contacto"
            android:parentActivityName=".MainActivity">
           <!-- Soporte para versiones anteriores a 4.0: -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".menu_opciones.PedirUsuarioInstagram"
            android:parentActivityName=".MainActivity">
            <!-- Soporte para versiones anteriores a 4.0: -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- 2016-07-09 Notificaciones en servicio -->
        <service
            android:name=".notificaciones.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".notificaciones.NotificacionIDTokenService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <!-- 2016-08-12 declaramos receivers -->
        <receiver android:name=".receivers.VerUsuario">
            <intent-filter>
                <action android:name="VER_USUARIO"/>
                <action android:name="VER_USUARIO_CLICK"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".receivers.DarFollowUnfollow">
            <intent-filter>
                <action android:name="FOLLOW_UNFOLLOW"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>